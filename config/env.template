# ============================================
# PreSuite Unified Environment Configuration
# ============================================
# Copy this file to each service as .env and fill in values
# CRITICAL: JWT_SECRET must be IDENTICAL across all services

# ============================================
# SHARED AUTHENTICATION (Required for all)
# ============================================
JWT_SECRET=<generate-with: openssl rand -hex 32>
JWT_ISSUER=presuite

# ============================================
# SERVICE URLS
# ============================================
PRESUITE_URL=https://presuite.eu
PREDRIVE_URL=https://predrive.eu
PREMAIL_URL=https://premail.site
PREOFFICE_URL=https://preoffice.site

# ============================================
# PreSuite Hub (76.13.2.221)
# ============================================
# Venice AI Integration for PreGPT
VENICE_API_KEY=<your-venice-api-key>
VENICE_API_URL=https://api.venice.ai/api/v1

# Server config
PRESUITE_PORT=3001
NODE_ENV=production

# ============================================
# PreMail (76.13.1.117)
# ============================================
# Database
PREMAIL_DATABASE_URL=postgresql://premail:password@localhost:5432/premail

# Stalwart Mail Server
STALWART_HOST=mail.premail.site
STALWART_IMAP_PORT=993
STALWART_SMTP_PORT=587
STALWART_API_URL=https://mail.premail.site:443
STALWART_ADMIN_USER=admin
STALWART_ADMIN_PASS=<your-stalwart-admin-password>

# Server config
PREMAIL_PORT=4001

# ============================================
# PreDrive (76.13.1.110)
# ============================================
# Database
PREDRIVE_DATABASE_URL=postgres://predrive:password@postgres:5432/predrive
POSTGRES_PASSWORD=<your-postgres-password>

# S3 Storage (Storj)
S3_ENDPOINT=https://gateway.eu1.storjshare.io
S3_ACCESS_KEY_ID=<your-storj-access-key>
S3_SECRET_ACCESS_KEY=<your-storj-secret-key>
S3_BUCKET=predrive
S3_REGION=eu1

# Server config
PREDRIVE_PORT=4000
CORS_ORIGIN=https://predrive.eu

# Cache (Valkey/Redis)
REDIS_URL=redis://valkey:6379

# ============================================
# PreOffice (76.13.2.220)
# ============================================
# Collabora Admin
COLLABORA_ADMIN_USER=admin
COLLABORA_ADMIN_PASS=<your-collabora-admin-password>

# WOPI Configuration
WOPI_BASE_URL=https://preoffice.site/wopi
COLLABORA_URL=http://collabora:9980
COLLABORA_PUBLIC_URL=https://preoffice.site

# PreDrive Integration
PREDRIVE_API_URL=https://predrive.eu/api

# Domain
DOMAIN=preoffice.site
